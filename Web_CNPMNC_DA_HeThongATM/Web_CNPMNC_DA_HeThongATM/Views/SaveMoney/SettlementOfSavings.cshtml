                    </span>

                </div>
                <div class="inputBox">
                    <input asp-for="TienGui" id="sotiengui" value="" type="text" maxlength="16">
                    <span asp-validation-for="TienGui" class="text-danger"></span>
                </div>
            </div> *@
            <div class="flexbox">

                <div class="inputBox">
