@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel

@model TaiKhoanLienKetViewModel
@{
	Layout = "_LayoutMain";
	var abc = ViewData["abc"] as IEnumerable<TaiKhoanLienKetViewModel>;
}

<body>


	<div class="formbold-main-wrapper">
		<div class="w-full">
			<div class="formbold-form-wrapper">
				<div class="formbold-form-header">
					<h3>Mở/Khóa tài khoản</h3>
				</div>
				<form method="post" asp-controller="ManageCardAndAccount" asp-action="TrangThaiTk"
					  class="formbold-chatbox-form">
					<div class="formbold-mb-5">
						<label for="stk" class="formbold-form-label"> Số tài khoản </label>
						<input id="SoTaiKhoan" type="text" asp-for="SoTaiKhoan" aria-required="true" aria-invalid="false"
							   placeholder="Nhập số tài khoản"
							   class="formbold-form-input" />
					</div>
					<div class="formbold-mb-5">
						<label for="email" class="formbold-form-label"> Họ và tên chủ tài khoản </label>
						<input id="tenTK" type="text" asp-for="TenTK"
							   placeholder=""
							   class="formbold-form-input" readonly>
					</div>

					<div class="formbold-mb-5">
						<label for="inputTinhTrang" class="formbold-form-label"> Nhập trạng thái tài khoản (0 hoặc 1) </label>
						<input id="inputTinhTrang" type="text" asp-for="TinhTrangTaiKhoan" placeholder="" class="formbold-form-input" oninput="showAccountStatus()">
					</div>

					<div class="formbold-mb-5">
						<label for="trangthaiTK" class="formbold-form-label"> Trạng thái tài khoản </label>
						<input id="trangthaiTK" type="text" asp-for="TinhTrangTaiKhoan" placeholder="" class="formbold-form-input" readonly>
					</div>

					<div>
						<button asp-controller="ManageCardAndAccount" asp-action="TrangThaiTk" class="formbold-btn w-full">Xác nhận Mở/Khóa</button>
					</div>
				</form>
			</div>
		</div>
	</div>
