@{
	Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row justify-content-center">
         <div class="card">
            <div class="card-header">
               <strong class="card-title">Quản lý loại tài khoản</strong>
            </div>
              <div class="card-body">
                               
                      <div id="pay-invoice">
                              <div class="card-body">
                                  <div class="card-title">
                                     <h3 class="text-center">Loại tài khoản liên kết</h3>
                                  </div>
                                  <hr>
                                    <form asp-controller="Account" method="post" asp-action="CreateAcc">
                                         <div class="form-group text-center">
                                              <ul class="list-inline">
                                                  <li class="list-inline-item"><i class="text-muted fa fa-cc-visa fa-2x"></i></li>
                                                  <li class="list-inline-item"><i class="fa fa-cc-mastercard fa-2x"></i></li>
                                                  <li class="list-inline-item"><i class="fa fa-cc-amex fa-2x"></i></li>
                                                  <li class="list-inline-item"><i class="fa fa-cc-discover fa-2x"></i></li>
                                              </ul>
                                         </div>

                                         <div class="form-group">
                                              <label for="cc-payment" class="control-label mb-1">Tên loại tài khoản</label>
                                              <input type="text" name="TenLoaiTaiKhoan" placeholder="Nhâp tên loại tài khoản" class="form-control" required>
                                         </div>


                                         <div>
                                             <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                                  <i class="fa fa-lock fa-lg"></i>&nbsp;
                                                  <span id="payment-button-amount">Xác nhận</span>
                                             </button>
                                         </div>
                                    </form>
                              </div>
                      </div>
              </div>
         </div> 
</div>