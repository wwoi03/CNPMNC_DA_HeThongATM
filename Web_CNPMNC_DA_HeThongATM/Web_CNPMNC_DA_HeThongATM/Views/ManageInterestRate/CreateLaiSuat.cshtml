@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel

@model LaiSuatViewModel
@{
	Layout = "_LayoutMain";
	var laiSuatViewModels = ViewData["LaiSuatList"] as IEnumerable<LaiSuatViewModel>;
}
<body>


	<div class="formbold-main-wrapper">
		<div class="w-full">
			<div class="formbold-form-wrapper">
				<div class="formbold-form-header">
					<h3>Thêm lãi suất</h3>
				</div>
				<form method="post" asp-controller="ManageInterestRate" asp-action="CreateLaiSuat"
					  class="formbold-chatbox-form">
					<div class="formbold-mb-5">
						<label for="name" class="formbold-form-label"> Mã lãi suất </label>
						<input type="text" asp-for="Key"
							   placeholder="Nhập mã lãi suất"
							   class="formbold-form-input" />
					</div>
					<div class="formbold-mb-5">
						<label for="email" class="formbold-form-label"> Kỳ hạn </label>
						<input type="text" asp-for="KyHan"
							   placeholder="Nhập kỳ hạn lãi suất"
							   class="formbold-form-input" />
					</div>

					<div class="formbold-mb-5">
						<label for="message" class="formbold-form-label"> Tỉ lệ </label>
						<input type="text" asp-for="TiLe"
							   placeholder="vd: 3.5"
							   class="formbold-form-input" />
					</div>

					<div>
						<button asp-controller="ManageInterestRate" asp-action="CreateLaiSuat" class="formbold-btn w-full">Tạo</button>
					</div>
				</form>
			</div>
		</div>
	</div>
