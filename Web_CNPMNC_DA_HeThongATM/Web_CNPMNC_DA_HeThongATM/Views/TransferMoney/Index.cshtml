        <script>
            // Hàm để cập nhật trường tên dựa trên số tài khoản được nhập
            function updateName(accountNumberInput, nameFieldId) {
                const accountNumber = accountNumberInput.value;

                // Thực hiện cuộc gọi API để lấy tên chủ tài khoản
                fetch(`/TransferMoney/sendAccount?SoTaiKhoan=${accountNumber}`)
                    .then(response => response.json())
                    .then(data => {
                        // Cập nhật động trường tên tương ứng
                        document.getElementById(nameFieldId).value = data;
                    })
                    .catch(error => {
                        console.error('Lỗi khi truy xuất tên chủ tài khoản:', error);
                    });
            }

            // Thêm sự kiện nhận biết số tài khoản người gửi và người nhận
            document.getElementById('SoTaiKhoanNguoiChuyen').addEventListener('input', function () {
                updateName(this, 'tenTKChuyen');
            });

            document.getElementById('SoTaiKhoanNguoiNhan').addEventListener('input', function () {
                updateName(this, 'TenTKNhan');
            });
        </script>

