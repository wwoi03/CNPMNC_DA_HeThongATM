                            <canvas id="card-type"></canvas>
                            </div> <!-- /.card-body -->
                            </div>*@
                        </div> <!-- /.row -->
                        <div class="card-body"></div>
                    </div>
                </div><!-- /# column -->
            </div>
            <!--  /Traffic -->
            <div class="clearfix"></div>

        </div>
