            function RenderChart(listDay, listIn) {
                const customerChart = document.getElementById('traffic-chart');
                new Chart(customerChart, {
                    type: "line",
                    data: {
                        labels: listDay,
                        datasets: [
                            {
                                label: "Số lần giao dịch ",
                                fillColor: "rgba(220,20,220,0.2)",
                                strokeColor: "rgba(220,220,220,1)",
                                data: listIn,
                                fill: true,
