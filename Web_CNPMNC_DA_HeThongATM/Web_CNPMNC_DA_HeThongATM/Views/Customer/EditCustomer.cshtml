﻿@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel

@model KhachHangViewModel
	Layout = "_LayoutMain";
	var accounts = ViewData["j"] as List<KhachHangViewModel>;
}

<body>
	<form method="post" asp-controller="Customer" asp-action="EditCustomer" class="content" enctype="multipart/form-data">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-body">
						<div class="form-group">
							<label for="inputSTK" asp-for="CCCD">Căn Cước Công Dân</label>
							<input type="text" id="inputSTK" class="form-control" asp-for="CCCD">
						</div>
						<div class="form-group">
							<label for="inputSTK" asp-for="TenKH">Tên Khách Hàng</label>
							<input type="text" id="inputSTK" class="form-control" asp-for="TenKH">
						</div>
						<div class="col-md-4">
							<div>
								<label class=" form-control-label">Giới tính</label>

							</div>
							<div>
								<div class="form-check-inline form-check">
									<label for="inline-radio1" class="form-check-label col-md-7">
										<input type="radio" id="inline-radio1" name="Gioitinh" value="Nam" asp-for="GioiTinh" class="form-check-input">Nam
									</label>
									<label for="inline-radio2" class="form-check-label col-md-6">
										<input type="radio" id="inline-radio2" name="Gioitinh" value="Nữ" asp-for="GioiTinh" class="form-check-input">Nữ
									</label>
								</div>
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-3">
								<label for="sonha" class="form-control-label">Số nhà:</label>
								<input type="text" id="sonha" class="form-control">
							</div>
							<div class="col-md-3">
								<label for="phuongxa" class="form-control-label">Phường/Xã:</label>
								<input type="text" id="phuongxa" class="form-control">
							</div>
							<div class="col-md-3">
								<label for="quanhuyen" class="form-control-label">Quận/Huyện:</label>
								<input type="text" id="quanhuyen" class="form-control">
							</div>
							<div class="col-md-3">
								<label for="tinhthanh" class="form-control-label">Tỉnh/Thành phố:</label>
								<input type="text" id="tinhthanh" class="form-control">
							</div>
							<input type="hidden" asp-for="DiaChi" id="Diachi" class="form-control">
						</div>
						<div class="form-group">
							<label for="inputSTK" asp-for="Email">Email</label>
							<input type="text" id="inputSTK" class="form-control" asp-for="Email">
						</div>
						<div class="form-group">
							<label for="inputSTK" asp-for="NgayTao">Căn Cước Công Dân</label>
							<input type="text" id="inputSTK" class="form-control" asp-for="NgayTao">
						</div>
					</div>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<a asp-controller="CustomerService" asp-action="NapTien" class="btn btn-secondary">Cancel</a>
				<button type="submit" class="btn btn-primary btn-sm">Nạp tiền</button>
			</div>
		</div>
	</form>
</body>