<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TransferMoneyActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="16dp">

        <!-- Thông tin người vận chuyển -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tai Khoan Nguon"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>



            <!-- Tài khoản nguồn -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp">

                <Spinner
                    android:id="@+id/sourceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:spinnerMode="dropdown"/>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <!-- Tiêu đề -->

                <!-- Số dư -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số dư khả dụng"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/tvSurplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="1000000000"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="16dp">

            <!-- Thông tin người vận chuyển -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tiêu đề -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thong Tin Giao Dich"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>



                <!-- Tài khoản nguồn -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp">

                    <!--                    <TextView
                                            android:id="@+id/tvPeriod"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="16dp"
                                            android:background="@color/white"
                                            android:gravity="center_vertical"
                                            android:hint="Chọn Kỳ Hạn Gửi"
                                            android:inputType="text"
                                            android:textSize="20dp"></TextView>-->

                    <Spinner
                        android:id="@+id/Spiner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:spinnerMode="dropdown"/>


                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!-- Tiêu đề -->




                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"
                tools:layout_editor_absoluteX="16dp">

                <!-- Thông tin người vận chuyển -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tiêu đề -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical">




                    </LinearLayout>



                    <!-- Tài khoản nguồn -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="14dp">

                        <EditText
                            android:id="@+id/EdtNumberMoney"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="Số Nộp thêm"
                            android:inputType="number"
                            android:textSize="20dp"></EditText>



                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <!-- Tiêu đề -->


                        <!-- Số dư -->
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btSendMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:text="Tiếp tục"
                    android:backgroundTint="@color/primary_blue_color"
                    android:background="@drawable/coner_radius_button">
                </Button>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>